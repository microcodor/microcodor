<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_search_posts_item_height"
    android:background="@drawable/selector_item_pressed"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="@dimen/item_simple_posts_item_margin"
        android:layout_marginRight="@dimen/item_simple_posts_item_margin"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go语言基础知识大全,Google最新支持的编码语言，范德萨发快捷方便"
            android:textColor="@color/title_black_color"
            android:textSize="@dimen/common_content_info_text_size"
            android:layout_marginTop="@dimen/item_search_posts_item_title_top"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/post_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fdsafsdafdsfdsfsd发放的范德萨范德萨df放大范德萨范德萨范德萨第三方范德萨发放范德萨发送发大水发大水发大水发反反复复范德萨发的是是是发大水发的撒范德萨范德萨发生的范德萨发生大"
            android:layout_below="@id/post_title"
            android:layout_marginTop="@dimen/item_search_posts_item_content_top"
            android:textSize="@dimen/common_attach_info_text_size"
            android:maxLines="3"/>

        <LinearLayout
            android:id="@+id/layout_author_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp">

            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android"
                android:maxLines="1"
                android:textSize="@dimen/common_comment_info_text_size"/>
            <TextView
                android:id="@+id/post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="著"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/common_attach_info_text_size"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_marginLeft="@dimen/item_simple_posts_item_margin"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>